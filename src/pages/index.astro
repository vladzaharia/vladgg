---
import Layout from '../layouts/Layout.astro';
import Backdrop from '../components/background/Backdrop.astro';
import Hero from '../components/text/Hero.astro';

const ALL_COLORS = [
  'red',
  'orange',
  'yellow',
  'lime',
  'green',
  'emerald',
  'sky',
  'blue',
  'violet',
  'fuchsia',
  'pink',
];

const accentColor = ALL_COLORS[Math.floor(Math.random() * ALL_COLORS.length)];
---

<Layout title="Home" description="Home">
  <div
    class="flex flex-col items-center lg:items-start justify-center lg:justify-end h-screen p-0 lg:p-14"
  >
    <Backdrop data-aos="fade-up">
      <div class="flex flex-col text-center lg:text-left px-6 py-12 lg:p-14">
        <Hero class="mb-4">
          Hi, I'm <span class=`text-${accentColor}-500`>Vlad</span>.
        </Hero>
        <p
          data-aos="fade-up"
          data-aos-duration="1000"
          data-aos-delay="200"
          class="text-xl md:text-2xl"
        >
          I'm a full-stack software engineer based in Seattle, WA.
        </p>
        <span class="text-red-500 hover:text-red-500"></span>
        <span class="text-orange-500 hover:text-orange-500"></span>
        <span class="text-yellow-500 hover:text-yellow-500"></span>
        <span class="text-lime-500 hover:text-lime-500"></span>
        <span class="text-green-500 hover:text-green-500"></span>
        <span class="text-emerald-500 hover:text-emerald-500"></span>
        <span class="text-sky-500 hover:text-sky-500"></span>
        <span class="text-blue-500 hover:text-blue-500"></span>
        <span class="text-violet-500 hover:text-violet-500"></span>
        <span class="text-fuchsia-500 hover:text-fuchsia-500"></span>
        <span class="text-pink-500 hover:text-pink-500"></span>
      </div>
    </Backdrop>
  </div>
</Layout>
