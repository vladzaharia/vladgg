---
interface Props {
  title: string;
  description?: string;
}

const { title: pageTitle, description: pageDescription } = Astro.props;

import Backdrop from "../components/background/Backdrop.astro";
import Layout from "./Layout.astro";
---

<Layout title={pageTitle} description={pageDescription}>
    <Backdrop class="absolute top-24 left-2 right-2 bottom-2 rounded-xl p-4 backdrop-opacity-95 bg-slate-900/80">
        <slot />
    </Backdrop>
</Layout>
