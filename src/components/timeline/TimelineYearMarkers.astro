---
interface Props {
  years: Array<{
    year: number;
    position: number;
  }>;
}

const { years } = Astro.props;
---

<div class="absolute inset-0 left-1/2 w-1 -translate-x-0.5 pointer-events-none">
  {years.map(({ year, position }) => (
    <div 
      class="absolute -translate-x-1/2 flex items-center gap-2"
      style={`top: ${position * 100}%`}
    >
      <div class="w-3 h-0.5 bg-slate-700"></div>
      <div class="text-sm text-slate-600">{year}</div>
    </div>
  ))}
</div>
